.modal-question-answers
    display none
    position fixed
    z-index 110
    top 0
    width 100%
    height 100vh
    overflow auto
    background #f9f9f9

.header-question-answers
    position fixed
    display flex
    align-items center
    justify-content space-between
    padding-left 20px
    padding-right 20px
    z-index 115
    width 100%
    height 60px
    color #018c97
    background #fff
    box-sizing border-box
    box-shadow 2px 0 2px 2px rgba(49,49,48,0.1)
    i
        font-size 27px
        cursor pointer
        &:hover
            opacity 0.8

.content-question-answers
    display flex
    padding 85px 15px 15px 15px
    box-sizing border-box

// Question and answers of the discussions
.question-answers
    flex auto

.questionOrAnswer-discussion
    background #fff
    border 1px solid #e5e5e5
    box-sizing border-box
    padding 15px

.user-data-question
    display flex
    justify-content space-between
    align-items center
    box-sizing border-box
    margin-bottom 10px

.user-question
    display flex
    align-items center
    img
        border-radius 50%
        width 55px
        height 55px
        &:hover
            opacity 0.8
    a:nth-child(2)
        margin-bottom 5px
    span
        color #018c97
        font-weight bold
        margin-left 5px
        &:hover
           text-decoration underline

.data-question
        font-style italic
        color rgba(59,58,58,0.7)
        margin-bottom 5px

.inv-content-question
    padding-top 5px
    h1
        font-size 25px

.content-question
    p
        width 100%
        margin 4px 0px 4px 0px
        word-wrap break-word
        a
            color #1a4ed9
            &:hover
              opacity 0.8
    ul
        width 100%
        list-style disc
        box-sizing border-box
        padding-left 40px
        i
            word-wrap break-word
    img
        max-width 80%
        max-height 500px
        margin-top 2px
        margin-bottom 10px
        border 1px solid #e5e5e5
        &:hover
            opacity 0.8

.tags-question
    padding 15px 0px 5px 0px
    a
        font-size 14px
        padding 3px 6px
        background rgba(121,234,206,0.6)
        margin-right 5px
        &:hover
            opacity 0.8

.interaction-question-answers
    display flex
    justify-content space-between
    align-items center
    margin-top 15px

.buttons-voting
    color #fff
    padding 7px 20px
    border-radius 5px
    background #018c97
    span
        font-size 18px
        margin-left 14px
        margin-right 14px
    i
        font-size 20px
        &:hover
              color #79eace

.comentTheResponse-question
    cursor pointer
    &:hover span
        text-decoration underline

.inv-input-comentTheResponse
    display none
    flex-direction column
    border 1px solid #e5e5e5
    border-radius 5px
    margin-top 10px
    padding 8px
    box-sizing border-box
    &:hover
        border 1px solid #79eace
    span
        margin-top 8px
        width 100%
        text-align center
        cursor pointer
        &:hover
            text-decoration underline

.input-comentTheResponse
    display inherit
    width 100%
    height 100px
    margin-bottom 8px
    outline none
    overflow auto

.inv-buttons-comentTheResponse
    display flex
    justify-content flex-end
    align-items center
    a:hover
          text-decoration underline

.button-comentTheResponse
    margin-left 10px
    padding 8px 25px 8px 25px

.input-responseOfQuestion
    margin-top 15px
    margin-bottom 25px
    padding-bottom 25px
    border-bottom 1px solid #e5e5e5

.number-filter-responses
    display flex
    justify-content space-between
    align-items center
    margin-bottom 5px

.number-responses
    span
        font-weight bold

.filter-responses
    select
        padding 10px 7px
        width 200px

.inv-responseOfQuestion
    margin-bottom 20px

.inv-commentsOfAnswer
    .guideOfComments-comment:last-child .guide-vertical-2
        display none

.guideOfComments-comment
    display flex

.guideOfComment
      display flex
      flex-direction column
      margin-left 60px
      div
          width 3px
          &:first-child
            height 36px
            background #79eace
          &:last-child
            flex auto
            background #79eace

.commentOfAnswer
    display flex
    flex auto

.guideHorizontal
    width 50px
    height 3px
    margin-top 33px
    flex-shrink 0
    background #79eace

.comment
    flex auto
    margin-top 8px
    padding 8px
    box-sizing border-box
    border-radius 5px
    background #fff
    border 1px solid #e5e5e5

.comment-userAndData
    display flex
    justify-content space-between
    align-items center

.comment-user
    display flex
    align-items center
    img
        border-radius 50%
        width 36px
        height 36px
        &:hover
            opacity 0.8
    span
        margin-left 5px
        color #018c97
        &:hover
            text-decoration underline
    a:nth-child(2)
        margin-bottom 5px

.comment-data
    font-style italic
    color rgba(59,58,58,0.7);
    margin-bottom 5px

.contentOfComment
    margin-top 8px

//Additional information of hte discussion
.additional-information
    flex-shrink 0
    width 30%
    margin-left 20px
    padding-right 15px

.information-question-answers
    margin-bottom 25px
    div
        margin-bottom 10px
    span:nth-child(1)
        color rgba(59,58,58,0.7)
        margin-right 10px

.inv-class-related
    display flex
    flex-direction column
    align-items flex-start
    margin-bottom 25px
    h4
        font-weight bold
        color #018c97
        margin-bottom 5px
    a
        font-style italic
    a:hover
        text-decoration underline

  .class-related
      margin-bottom 3px
      a
          display block
          background #79eace
          padding 10px 20px 10px 15px
          border-radius 5px
          font-style inherit

.inv-questions-related
    h4
        font-weight bold
        color #018c97
        margin-bottom 5px

.question-related
    display flex
    align-items flex-start
    margin-bottom 10px
    a
        &:nth-child(1)
            flex-shrink 0
            width 32px
            height 25px
            line-height 25px
            font-size 15px
            border-radius 2px
            text-align center
            background #79eace
            margin-right 5px
            &:hover
                opacity 0.8
        &:nth-child(2)
            margin-top 3px
            &:hover
                text-decoration underline
