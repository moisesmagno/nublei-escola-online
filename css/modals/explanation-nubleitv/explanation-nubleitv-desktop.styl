.modal-explanation-nubleitv
    display none
    position absolute
    top 0
    z-index 110
    width 100%
    height 100vh
    padding 0px 10px
    box-sizing border-box
    background rgba(0,0,0,0.8)
    header
        position absolute
        z-index 115
        right 15px
        top 15px
        font-size 27px
        i
            cursor pointer
            color rgba(255,255,255,0.8)
            &:hover
                color #79eace

.inv-video-explanation-nubleitv
    display flex
    justify-content center
    align-items center
    height 100vh

.video-explanation-nubleitv
      width 50%
      background transparent
      article
          width 100%
          position relative
          padding-top 56.25%
          iframe
              position absolute
              height 100%
              width 100%
              top 0
              left 0
