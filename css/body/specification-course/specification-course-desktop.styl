    box-sizing border-box
    display flex
    justify-content center

.teacher
    margin-left 40px
    text-align center
    img
        border-radius 100%
    &:first-child
        margin-left 0px

.inf-teacher
    h4
        color #018c97
    div
        margin-top 5px
        text-align center
        a
            margin-left 8px
            &:first-child
                margin-left 0px
            &:hover
                color #79eace


// Comments of the students
.cards-comments
    display flex
    justify-content center
    margin-top 30px
    padding-bottom 90px
    article
        width 25%
        height 270px
        background #fff
        border 1px solid #e5e5e5
        border-radius 5px
        text-align center
        padding 20px 15px 20px 15px
        box-sizing border-box
        margin-left 25px
        &:first-child
            margin-left 0px
        img
            border-radius 100%
        h4
            color #018c97
            margin-top 3px
            margin-bottom 5px
