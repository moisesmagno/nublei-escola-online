.requirements-course
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    padding 10px 0px 90px 0px
    article
        width 17%
        margin-top 20px
        text-align center
        margin-left 25px
        &:first-child
            margin-left 0px
        div
            width 100%
            height 110px
            border-radius 5px
            display flex
            justify-content center
            align-items center
            margin-bottom 10px
            &:hover img
                height 80px
            img
                height 65px
                transition height 0.5s
        h3:hover
            text-decoration underline
        span
            color #cd4027

.requirements-optional
    color #e39343 !important

