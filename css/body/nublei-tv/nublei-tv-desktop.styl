.menu-nubleiTv
    margin-top 60px
    text-align center
    background #fff
    ul
        display flex
        justify-content center
        margin-top 50px
        li
            border-bottom 5px solid transparent
            padding 0px 5px 5px 5px
            font-size 18px
            &:first-child
                margin-right 40px
            &:hover
                border-bottom 5px solid #79eace

.menu-selected-nubleitv
    border-bottom 5px solid #79eace !important

.explanation-nubleitv
    display flex
    justify-content center
    align-items center
    padding 0 10px
    box-sizing border-box
    margin-top 60px
    margin-bottom 60px
    span
        width 45%
        margin-right 10px
        text-align center
        color #018c97
        cursor pointer
        &:hover
            opacity 0.8

.img-video-explanation
    position relative
    text-align center
    cursor pointer
    img
        height 70px
    div
        position absolute
        top 0
        width 100%
        height 70px
        text-align center
        line-height 70px
        transition background 0.8s
        i
            width 32px
            height 32px
            line-height 32px
            text-align center
            border-radius 100%
            border 2px solid transparent
            color transparent
            transition border 1s, color 1s;
        &:hover
            background rgba(0,0,0,0.3)
        &:hover i
            border 2px solid #79eace
            color #79eace
            background rgba(255,255,255,0.2)

.list-videos-tv
    display flex
    flex-wrap wrap
    justify-content space-between
    border-top 1px solid #e5e5e5
    padding 60px 10px 0px 10px

.video-tv
    width 31%
    margin-bottom 30px

.img-video
    position relative
    background #fff
    img
        width 100%
    div
        position absolute
        display flex
        justify-content center
        align-items center
        width 100%
        height 99%
        top 0
        background transparent
        transition background 0.8s
        cursor pointer
        i
            width 60px
            height 60px
            border-radius 100%
            text-align center
            line-height 60px
            border 2px solid transparent
            color transparent
            background transparent
            transition border 1s, color 1s, background 1s
        &:hover
            background rgba(0,0,0,0.5)
        &:hover i
            border 2px solid #79eace
            color #79eace
            background rgba(255,255,255,0.2)

.inf-video-tv
    padding 8px
    padding-bottom 0px
    background #fff
    div:nth-child(1)
        height 85px
        text-align center
        span
            font-style italic
            color rgba(59,58,58,0.7)
        h3
            margin-bottom 7px
            a
                font-size 16px
                color #018c97
                &:hover
                    text-decoration underline
    div:nth-child(2)
        display flex
        justify-content space-between
        align-items center
        padding-top 8px
        padding-bottom 8px
        border-top 1px solid #e5e5e5
        span:nth-child(1)
            i
                color #79eace
                font-size 20px
        span:nth-child(2)
            display flex
            align-items center
            img
                width 25px
                height 25px
                margin-top 3px
                margin-left 5px
                margin-right 5px
                border-radius 100%
