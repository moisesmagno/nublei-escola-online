.inv-classVideo-interaction
    padding 60px 10px 0px 10px
    box-sizing border-box

//Involved the class video
.inv-classVideo
    text-align center

.classVideo-options
    display flex
    align-items center
    justify-content space-between
    box-sizing border-box
    width 70%
    margin 0 auto
    margin-top 20px

.chev-mobile
    display none

.class-back
    width 45%
    height 50px
    text-align left
    line-height 50px
    padding 0px 5px 0px 0px
    box-sizing border-box
    span
        margin-bottom 2px
        &:hover
            text-decoration underline

.class-options
    display flex
    align-items center
    justify-content space-around
    width 10%
    height 50px
    a
        color #e5e5e5
        font-size 22px

.class-next
    width 45%
    height 50px
    text-align right
    line-height 50px
    padding 0px 0px 0px 5px
    box-sizing border-box
    span
        margin-bottom 2px
        &:hover
            text-decoration underline

.classVideo
    margin 0 auto
    width 70%

.content-classVideo
    width 100%
    position relative
    padding-top: 56.25%;

.content-classVideo iframe
    position absolute
    height 100%
    width 100%
    top 0
    left 0

//Involved the interaction of class
.menu-interactionOfClass
    display flex
    justify-content center
    width 70%
    margin 0 auto
    border-bottom 2px solid #79eace
    margin-top 25px
    margin-bottom 25px

.op-menu-interactionOfClass
    display flex
    flex-direction column
    align-items center
    margin-right 20px
    &:last-child
        margin-right 0px
    i
        margin-top 4px
        margin-bottom 5px
        color #79eace
    div
        text-align center
        &:nth-child(1)
            width 42px
            height 42px
            line-height 42px
            border-radius 100%
            cursor pointer
            font-size 18px
            background #e5e5e5
            i
                color rgba(59,58,58,0.7)
            &:hover
                opacity 0.8
            &:hover i
                color #3a3a3a
    .fa-chevron-up
        display none

.interaction-option-selected
    background #79eace !important
    i
        color #3a3a3a !important
    &:hover
        opacity inherit !important

.inv-content-interaction
    width 70%
    padding 0px 10px
    box-sizing border-box
    margin 0 auto

.user-discussions-interaction
    padding 0px 120px

.numDiscussions-filter-interaction
    display flex
    justify-content space-between
    align-items center
    margin-top 25px
    margin-bottom 3px
    span
        font-weight bold
    select
        width 200px
        height 40px

.inv-content-exercises,
.inv-content-files,
.inv-content-links,
.inv-content-github
    display flex
    flex-direction column
    align-items flex-start
    a
        display flex
        align-items center
        margin-bottom 15px
        i
            margin-right 5px
            font-size 18px
        &:hover span
            text-decoration underline

.inv-content-exercises,
.inv-content-files,
.inv-content-links,
.inv-content-github
    display none
