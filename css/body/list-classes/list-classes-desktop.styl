// List of classes and informations
.inv-list-classes-discussions
    width 100%

.list-classes-discussions
 	  display flex
 	  height 100vh
 	  min-height 100%
 	  overflow hidden
 	  padding-top 60px
    box-sizing border-box

// Classes of information
.list-classes-information
    position relative
    padding 0px 20px 0px 20px
    box-sizing border-box
    flex auto
    overflow auto

.course-information
    display flex
    align-items center
    justify-content space-between
    border-bottom 1px solid #e5e5e5
    padding 20px 0px

.course-teacher
    display flex
    align-items center
    justify-content flex-star
    span
        text-align center
    figure
        margin 0
        img
            float left
            border-radius 50%
            width 42px
            height 42px
            margin-left 5px
            cursor pointer
            &:hover
                opacity 0.8

.title-teacher-mobile
    display none

.course-data
    display flex
    align-items flex-end

.data
    display flex
    flex-direction column
    text-align center
    justify-content center
    margin-left 30px
    &:first-child
        margin-left 0px
    span:first-child
        color #018c97
        font-size 25px

.level-resposive,
.see-discussions
    display none

.data-course-level
    display flex
    align-items flex-end
    margin-bottom 7px
    div
        border 1px solid #018c97
        border-radius 50%
        &:nth-child(1)
            width 10px
            height 10px
        &:nth-child(2)
            margin-left 2px
            width 14px
            height 14px
        &:nth-child(3)
            margin-left 2px
            width 17px
            height 17px

.filled-circle
    background #018c97

//List of classes
.list-classes-module
    h3
        font-size 18px
        color #018c97
        margin 20px 0px 5px 0px


//Black Background
.black-background
    display none
    float left
    position fixed
    z-index 10
    top 0
    width 100%
    height 100vh
    background rgba(0,0,0,0.3)


// List of discussions
.inv-list-discussions
    position relative
    flex-shrink 0
    width 32.5%
    padding 20px 20px 0px 20px
    box-sizing border-box
    overflow auto

.close-input-discussions
    display none
    height 40px
    line-height 40px
    background #018c97
    color #fff
    padding 0px 9px
    margin-bottom 10px
    cursor pointer
    i
        font-size 18px
    span
        margin-left 2px
    &:hover
        color #79eace
        background rgba(1,140,151,0.9)

.filter-options-custom
    width 100%
    margin-top 20px
    padding-top 20px
    padding-bottom 15px
    border-top 1px solid #e5e5e5
    select
        width 100%
        border 1px solid #e5e5e5
        border-radius 5px
        padding 10px 8px
        box-sizing border box
        outline none
        &:focus
            border 1px solid #79eace
